<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DosenPageActivity">

    <android.support.v7.widget.CardView
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:padding="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <fr.arnaudguyon.smartfontslib.FontTextView
                    android:id="@+id/txt_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="50dp"
                    android:text="Nama :"
                    android:textSize="20sp" />

                <fr.arnaudguyon.smartfontslib.FontTextView
                    android:id="@+id/dosen_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/txt_name"
                    android:text="Sumiyati"
                    android:textSize="20sp" />
            </RelativeLayout>

            <RelativeLayout
                android:padding="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <fr.arnaudguyon.smartfontslib.FontTextView
                    android:id="@+id/txt_dosen_nip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="50dp"
                    android:text="NIP     :"
                    android:textSize="20sp" />

                <fr.arnaudguyon.smartfontslib.FontTextView
                    android:id="@+id/dosen_nip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/txt_dosen_nip"
                    android:text="Sumiyati"
                    android:textSize="20sp" />
            </RelativeLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.design.widget.TabLayout
        android:id="@+id/tablayout_dosen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:tabGravity="fill"
        app:tabPaddingStart="-1dp"
        app:tabPaddingEnd="-1dp"
        app:tabIndicatorColor="@color/colorAccent"
        app:tabMode="fixed">
    </android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_dosen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
    </android.support.v4.view.ViewPager>

</LinearLayout>